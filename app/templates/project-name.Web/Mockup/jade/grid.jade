extends includes/layout

block append vars
    - var pageTitle = 'tpl-grid'

block grid
    - var gridColumns = 12

    div.grid-row
        div(class="grid-col-#{gridColumns}")
            div.pad #{gridColumns}
    // .grid-row

    - for (var i=1; i<=gridColumns; i++)
        - if(gridColumns-i != 0)
            div.grid-row
                div(class="grid-col-"+(gridColumns-i))
                    =gridColumns-i
                div(class="grid-col-"+i)
                    =i
            // .grid-row

    div.grid-row
        - var size2 = gridColumns / 2
        - while(size2--)
            div.grid-col-2
                | 2
    // .grid-row

    div.grid-row
        - var size1 = gridColumns
        - while(size1--)
            div.grid-col-1
                | 1
    // .grid-row


block content
